{
  "name": "react-ts-template",
  "version": "1.0.0",
  "description": "",
  "repository": "https://github.com/severisv/react-ts-template",
  "main": "index.html",
  "scripts": {
    "build": "parcel build ./src/index.html -d ../server/wwwroot/dist --public-url /dist",
    "watch": "parcel watch ./src/index.html -d ../server/wwwroot/dist --public-url /dist",
    "test": "jest",
    "watch-test": "jest --watchAll",
    "format": "prettier --write **\\*.{ts,tsx}",
    "lint": "tslint --project ./ && prettier -l **\\*.{ts,tsx}",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint",
      "prettier --list-different"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/ramda": "^0.25.20",
    "@types/react": "^16.0.37",
    "@types/react-dom": "^16.0.4",
    "@types/react-redux": "^5.0.15",
    "@types/react-router": "^4.0.22",
    "@types/react-router-dom": "^4.2.4",
    "@types/react-test-renderer": "^16.0.1",
    "autoprefixer": "^8.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "jest-css-modules": "^1.1.0",
    "less": "^3.0.0",
    "lint-staged": "^7.0.0",
    "package": "^1.0.1",
    "parcel-bundler": "^1.6.2",
    "parcel-plugin-typescript": "^0.7.0",
    "postcss-modules": "^1.1.0",
    "prettier": "^1.10.2",
    "react-mock-router": "^1.0.11",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "tslint-config-prettier": "^1.7.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "deep-object-diff": "^1.1.0",
    "normalize.css": "^8.0.0",
    "ramda": "^0.25.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "repatch": "^1.3.12"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(less)$": "node_modules/jest-css-modules"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|tsx)"
    ],
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  }
}
